<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#8865E4"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back Button"
                android:src="@drawable/back_arrow"
                android:padding="0dp"
                android:layout_gravity="start" />

            <!-- Toolbar Title (Centered) -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Development"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

        </androidx.appcompat.widget.Toolbar>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Information Texts -->
        <TextView
            android:id="@+id/info_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Developer Intern Responsibilities:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/info_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Experience in designing applications using Microsoft .Net, ASP.Net, C#, or Java."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/info_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• This is an internship position located in Bangalore."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/info_text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Define data structures and application solutions appropriate for the requirements under the direction of senior team members or the team leader."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/info_text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Code, document, and implement project specifications with assistance from senior and mid-level team members."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="78dp"
            android:elevation="4dp"
            android:backgroundTint="#327EBA"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>