<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_training">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8865E4"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Arrow Button in Toolbar -->
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back Button"
            android:src="@drawable/back_arrow"
            android:padding="10dp" />

        <!-- Centered Title -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Training"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background1">

        <!-- Container for Training Options -->
        <androidx.cardview.widget.CardView
            android:id="@+id/training_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="12dp"
                android:paddingEnd="20dp"
                android:paddingBottom="16dp"
                android:background="@drawable/background1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Training"
                    android:textColor="#1C1B1B"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingStart="20dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp" />

                <!-- Training Options -->
                <TextView
                    android:id="@+id/python_machine_learning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PYTHON WITH MACHINE LEARNING"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/python_nlp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PYTHON WITH NLP"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/python_ai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PYTHON WITH ARTIFICIAL INTELLIGENCE"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/data_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATA SCIENCE"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/c_with_data_structure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C WITH DATA STRUCTURE"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/dot_net_framework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".NET FRAMEWORK"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/web_development"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEB DEVELOPMENT"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/java_j2ee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAVA/J2EE"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/chatbot_development"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHATBOT DEVELOPMENT"
                    android:textColor="#1C1B1B"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
